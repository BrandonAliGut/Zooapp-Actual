<Configuracion>:
    
    MDBoxLayout:
        size_hint:1,.1
        pos_hint: {"top":1}
        MDBoxLayout:
            pos_hint: {"center_x":.5, "center_y":.5}
            IconLeftWidget:
                icon:'chevron-down-circle-outline' 
                theme_text_color: "Custom"
                icon_color:app.theme_cls.opposite_bg_dark
                on_release: 
                    app.Config_view_class("GridOpc")
                    root.manager.transition.direction = "down" #['left', 'right', 'up', 'down']
                    
            MDRelativeLayout:
                pos_hint: {"center_x":.4, "center_y":.5}
                MDBoxLayout:
                    size_hint:None, None
                    width: dp(100)
                    hiegth:dp(20)
                    pos_hint: {"center_x":.47, "center_y":.4}
                    MDLabel:
                        
                        text: "Configuracion"
                        theme_text_color: "Custom"
                        text_color:app.theme_cls.opposite_bg_dark
    MDBoxLayout:
        size_hint: 1,.9
        ScrollView:
            pos_hint: {"center_x":.5, "center_y":.5}
            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding:[20,0,20,20]
                MDBoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    line_color: (1,1,1,0)
                    MDLabel:
                        text: "Protector De Pantalla"
                        theme_text_color: "Custom"
                        text_color:app.theme_cls.opposite_bg_dark
                    
                
                OneLineIconListItem:
                    text: "Tienda De Temas"
                    theme_text_color: "Custom"
                    text_color:app.theme_cls.opposite_bg_dark
                    on_press: 
                        app.Config_view_class("Store_app")
                        root.manager.transition.direction = "up" #['left', 'right', 'up', 'down']
                    IconLeftWidget:
                        icon: "image-filter-black-white"
                        theme_text_color: "Custom"
                        icon_color:app.theme_cls.opposite_bg_dark
                    


                OneLineIconListItem:
                    id: oneLinetext
                    text: 'Modo Oscuro' 
                    theme_text_color: "Custom"
                    text_color:app.theme_cls.opposite_bg_dark
                    on_release: 
                        root.modify_class()

                    IconLeftWidget:
                        id: icon_t
                        icon: "white-balance-sunny"
                        theme_text_color: "Custom"
                        icon_color:app.theme_cls.opposite_bg_dark
                    MDSwitch:
                        id: select_true
                        active: False
                        pos_hint: {'center_x': .8, 'center_y': .5}
                        theme_text_color: "Custom"
                        icon_color:app.theme_cls.opposite_bg_dark
                        on_active: 
                            root.modify_class()
                            app.return_funcion_color()
                            
                MDBoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    MDLabel:
                        text: "Politicas"
                        theme_text_color: "Custom"
                        text_color:app.theme_cls.opposite_bg_dark

                OneLineIconListItem:
                    text: 'Condiciones'
                    theme_text_color: "Custom"
                    text_color:app.theme_cls.opposite_bg_dark
                    on_release: 
                        root.modify_class('on')
                        app.ConfigApp("configuracion")
                        root.manager.transition.direction = "up" #['left', 'right', 'up', 'down']
                        
                    IconLeftWidget:
                        icon: "sort-variant-lock-open"
                        theme_text_color: "Custom"
                        icon_color:app.theme_cls.opposite_bg_dark
                OneLineIconListItem:
                    text: 'Acerca De La App'
                    theme_text_color: "Custom"
                    text_color:app.theme_cls.opposite_bg_dark
                    on_release: 
                        app.ConfigApp("ayuda")
                        root.manager.transition.direction = "up" #['left', 'right', 'up', 'down']

                    IconLeftWidget:
                        icon:"alert-circle-outline"
                        theme_text_color: "Custom"
                        icon_color:app.theme_cls.opposite_bg_dark
                MDBoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    MDLabel:
                        text: "Otras opciones"
                        theme_text_color: "Custom"
                        text_color:app.theme_cls.opposite_bg_dark
                OneLineIconListItem:
                    text:"Calificar La App"
                    on_release: root.Dialogo_app_c()
                    theme_text_color: "Custom"
                    text_color:app.theme_cls.opposite_bg_dark
                    on_release: 
                        root.manager.transition.direction = "up" #['left', 'right', 'up', 'down']
                    IconLeftWidget:
                        icon: "star-circle-outline"
                        theme_text_color: "Custom"
                        icon_color:app.theme_cls.opposite_bg_dark
                MDBoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    
                Footer:

                MDBoxLayout:
                    size_hint_y: None
                    height: dp(60)

<Elemento@OneLineIconListItem>:
    tema:""
    icon:""
    text: self.tema
    IconLeftWidget:
        icon:self.icon
<Footer@MDBoxLayout>:
    size_hint_y: None
    height: dp(200)
    orientation: 'vertical'
    MDLabel:
        text:"APPZOOT"
        halign: "center"
        font_size: dp(20)
        theme_text_color: "Custom"
        text_color:app.theme_cls.opposite_bg_dark
        bold: True
    Image:
        size_hint: None, None
        size: 100,100
        pos_hint: {"center_x":.5, "center_y":.5}
        source: "././source/Imagenes/Logo.png"
    MDLabel:
        text:"Para mas informacion contactenos"
        halign: "center"
        theme_text_color: "Custom"
        text_color:app.theme_cls.opposite_bg_dark
    MDGridLayout:
        cols:1
        MDLabel:
            halign: "center"
            text:"Correo electronico"
            theme_text_color: "Custom"
            text_color:app.theme_cls.opposite_bg_dark
        MDLabel:
            halign: "center"
            text: "appzoot@gmail.com"
            theme_text_color: "Custom"
            text_color:app.theme_cls.opposite_bg_dark

<Start>:
