<ComentariosUser>:
    orientation:'vertical'
    MDBoxLayout:
        size_hint:1,.1
        pos_hint: {"top":1}
        MDBoxLayout:
            pos_hint: {"center_x":.5, "center_y":.5}
            IconLeftWidget:
                icon:"exit-to-app" 
                on_release: app.Regresar_a_inicio("Inicio1")
            MDRelativeLayout:
                pos_hint: {"center_x":.4, "center_y":.5}
                MDBoxLayout:
                    size_hint:None, None
                    width: dp(100)
                    hiegth:dp(20)
                    pos_hint: {"center_x":.47, "center_y":.4}
                    MDLabel:
                        font_style:"Subtitle1"
                        text: "Comentar"
    MDBoxLayout:
        size_hint:1,.9
        orientation:'vertical'
        MDBoxLayout:
            size_hint:1,.2
            orientation:'vertical'
            padding:[5,]
            spacing: dp(5)
            MDLabel:
                text:"¿Quieres enviarnos comentarios? Estariamos felizes de que lo hicieras, porfabor no compartas informacion sensible."
                font_style: "Body2"
            MDLabel:
                text:"¿Tienes preguntas o inquietudes legales? visita nuestros terminos y condiciones para mas informacion."
                font_style:"Overline"
                bold:True
        ScrollView:
            do_scroll_y: True
           
            MDGridLayout:
                cols: 1
                padding: [4,]
                spacing: dp(5)
                adaptive_height: True
                MDCard: 
                    radius: [10,]
                    orientation: 'vertical'
                    size_hint_y:None
                    height: card_in.height + bocten.height
                    MDBoxLayout:
                        id: card_in
                        size_hint_y:None
                        height: comentario_id.height + dp(50)
                        orientation:'vertical'
                        padding:[5]
                        MDLabel:
                            size_hint_y:None
                            text: "Ingrese El Comentario:"
                            font_style: "Caption"
                            bold: True
                            height: dp(20)
                        MDTextField:
                            id:comentario_id
                            multiline:True
                            line_color_normal: 0, 0, 0, 0
                            fill_color_focus: 1,1,1,.0
                            active_line: False
                    RelativeLayout:
                        size_hint_y:None
                        height: dp(30)
                        id: bocten
                        MDRectangleFlatIconButton:
                            pos_hint:{"center_x":.8, "center_y":1}
                            text: "send"
                            icon: "send-circle-outline"
                            theme_text_color: "Custom"
                            
                            line_color: 0, 0, 0, 0
               

                    
                    
                  
                MDCard:
                    orientation: 'vertical'
                    size_hint_y:None
                    height: 300
                 
                    md_bg_color: 0,0,0,0
                    MDBoxLayout:
                        size_hint_y: None
                        height: dp(200)
                        orientation: 'vertical'
                        MDLabel:
                            text:"APPZOOT"
                            halign: "center"
                            font_size: dp(20)
                            bold: True
                        Image:
                            size_hint: None, None
                            size: 100,100
                            pos_hint: {"center_x":.5, "center_y":.5}
                            source: "././Datos/Imagenes/Logo_Gris.png"
                        MDLabel:
                            text:"Para mas informacion contactenos"
                            halign: "center"
                        MDBoxLayout:
                            orientation: 'horizontal'
                            size_hint_x:None
                            width: dp(300)
                            pos_hint: {"center_x":.5, "center_y":.5}
                            MDLabel:
                                text:"Correo electronico"
                            MDLabel:
                                text: "appzoot@gmail.com"
