
        

<Error>:
    
    size_hint: 1, .3
    
    halign: "center"
    text: "NO EXISTE MAS CONTENIDO" 
    bold: True
    md_bg_color: [83/255,105/255,119/255, .7]
    theme_text_color: "Custom"
    line_color: 1,1,1,1
    text_color: 1,1,1,1
    radius: dp(19)

<ButtonCard>:
    size_hint: 1, None
    height: dp(150) if Window.size <= (500,500)  else dp(150) 
    size_hint_max_x: dp(300)
    id: buttons
    md_bg_color:app.theme_cls.primary_color
    #[5/255,157/255,0/255, .7] #[83/255,105/255,119/255, .7]
    line_color: 1,1,1,1
    radius: dp(10)
    
    on_press: app.ItemsDatos(root.opcion,root.nombre, root.imagen,root.Imgdefaul,root.Id_select, root.type_color)
    orientation: 'vertical'
    MDRelativeLayout:
        FitImage:
            size_hint: 1, 1
            opacity:0.5
            pos_hint: {"center_x": 0.5,"center_y": 0.5}
            radius: dp(10)
            source: root.imagen
        MDBoxLayout:
            size_hint_y: None
            height: dp(30)
            md_bg_color:1,1,1,.7
            pos_hint: {"center_x": 0.5,"center_y": 0.5}
            
        MDLabel:
            halign: "center"
            bold: True
            size:self.texture_size
            text: root.nombre
            theme_text_color: "Custom"
            opacity:0.9
            text_color: app.theme_cls.opposite_bg_light
        MDBoxLayout:
            id: franja_precio
            size_hint: None,None
            height: dp(0) 
            width: dp(0)
            orientation:"horizontal"
            padding:[1,]
            spacing: dp(2)
            Colorbox:
                id: colorbox
                colors_id: 1,1,1,0
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                colors: self.colors_id
            MDLabel:
                id: preciobox
                halign:"center"
                text: "free" 
                theme_text_color: "Custom"
                text_color: 1,1,1,0



