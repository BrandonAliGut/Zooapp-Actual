<Button_C>:
    size_hint_y: None
    height: dp(150)
    orientation: "vertical"
    
    MDLabel: 
        size_hint_y: None
        text: "Categorias"
        height: dp(30)
        theme_text_color: "Custom"
        user_font_size: "H2"
    ScrollView:
        do_scroll_y: False
        bar_width: 2
        scroll_timeout: .2
        MDGridLayout:
            rows: 1
            id: scroll_view_C
            adaptive_width: True
            spacing: dp(20)
            padding:[10,]




